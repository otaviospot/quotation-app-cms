{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "products",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "sku": {
      "type": "string"
    },
    "defaultImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "productId": {
      "type": "uid",
      "targetField": "sku"
    },
    "productGallery": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "showPrice": {
      "type": "boolean",
      "default": true
    },
    "price": {
      "type": "decimal"
    },
    "promotionalPrice": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    }
  }
}
